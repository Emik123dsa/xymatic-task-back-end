input UserInput {
  name: String!
  email: String!
  password: String!
}

type User {
  id: ID!
  name: String!
  email: String!
  status: StatusName!
  roles: [RoleName]!
  token: String!
  createdAt: String!
  updatedAt: String!
}

input UserSort {
  date: DateSort
  direction: DirectionSort
}

type Query {
  findUserByEmail(email: String!): User!
  findAllUsers(page: Int!, size: Int!, sort: UserSort!): [User]!
  countUsers: Long!
  findUserByChart(period: Period): [Chart]!
  signIn(email: String!, password: String!): User!
  getCurrentUser: User!
}

type Subscription {
  userSubscribe: Subscribe!
}

type Mutation {
  newUser(userInput: UserInput!): User!
}
