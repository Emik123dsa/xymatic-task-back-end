type Post {
    id: ID!
    title: String!
    content: String!
    author: User
}

extends type Query {
    findPostById(id: ID!): Post!
    findAllPosts: [Post]!
}

extend type Mutation {
    newPost(name: String!, content: String!): Post!;
    deletePost(id: ID!): Boolean
    updatePost(post: Post!): Post!;
}

