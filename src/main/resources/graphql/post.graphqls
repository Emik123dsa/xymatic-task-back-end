type Post {
  id: ID!
  title: String!
  content: String!
  user: User
}

extend type Query {
  findUserByEmail(email: String!): User!
  findAllPosts: [Post]!
  countPosts: Long!
}

extend type Mutation {
  newPost(title: String!, content: String!, userId: ID!): Post!
  deletePost(id: ID!): Boolean
}
